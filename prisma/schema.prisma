generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id          String   @id @default(cuid())
  prompt      String
  style       String
  status      Status   @default(pending)
  uuid        String   @default("")
  originalId  String?  @map("originalUrl")
  thumbnailId String?  @map("thumbnailUrl")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Status {
  created
  pending
  done
  error
}
